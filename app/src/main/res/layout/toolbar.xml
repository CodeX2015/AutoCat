<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/tb_background_color"
    android:theme="@style/ToolbarColoredBackArrow"
    app:popupTheme="@style/Theme.AppCompat.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Spinner
            android:id="@+id/toolbar_spinner_cat"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:drawSelectorOnTop="true"
            android:popupBackground="@color/spn_popup_bg_color"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_car_details"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:paddingBottom="2dp"/>

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/iv_change_view"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/ic_view_list_white_24dp"
            android:visibility="gone"/>

    </LinearLayout>

</android.support.v7.widget.Toolbar>



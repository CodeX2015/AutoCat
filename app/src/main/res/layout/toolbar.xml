        android:layout_height="match_parent"
        android:layout_gravity="right"
        app:vc_backgroundTint="#0A9900"
        app:vc_foregroundTint="#ffffff"
        app:vc_startDrawable="@drawable/ic_view_list_white_24dp"
        app:vc_endDrawable="@drawable/ic_view_module_white_24dp"
        /-->
